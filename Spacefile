# Spacefile Docs: https://go.deta.dev/docs/spacefile/v0
v: 0
micros:
  - name: Poketab-Backend
    src: .
    engine: custom
    primary: true
    commands:
      - apt install -y unzip
      - curl -fsSL https://deno.land/x/install/install.sh | sh
      - $HOME/.deno/bin/deno compile --output app --allow-all server/server.ts
      - chmod +x app
    include:
      - app
      - server
    run: ./app
    dev: deno run -A server/server.ts
    presets:
      env:
        - name: DENO_DIR
          description: Deno configuration directory (do not change /tmp)
          default: /tmp/deno_dir
        - name: password
        - name: host
        - name: port
        - name: clienturl
        - name: adminPasskey